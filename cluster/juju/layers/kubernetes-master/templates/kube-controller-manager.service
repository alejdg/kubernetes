[Unit]
Description=Kubernetes Controller Manager
Documentation=http://kubernetes.io/docs/admin/kube-controller-manager/
After=unit.target kube-apiserver
Requires=kube-apiserver

[Service]
Type=notify
EnvironmentFile=-/etc/default/kube-controller-manager
ExecStart=/usr/local/bin/kube-controller-manager $DAEMON_ARGS
TimeoutStartSec=0

[Install]
WantedBy=multi-user.target
